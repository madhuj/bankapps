  
  <div class="em"> 
<h1>Sign Up</h1>
<hr>


<%= form_for(@user, :url => sign_up_user_path(@user), :html => { :id => "user_new"} ) do |f| %>

<% if @user.errors.any? %>
<div class="alert alert-danger">
  <div class="error_messages">
    <h3>Form is invalid</h3>
    <ul>
      <% for message in @user.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
<div class="modal-header"> 
  <div class="form-group">
    <%= f.label :email, :class=>"col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :email, :class=> "form-control col-lg-5" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, :class=>"col-sm-4 control-label"  %>
    <div class="col-sm-8">
      <%= f.password_field :password, :class=> "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :class=>"col-sm-4 control-label"  %>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, :class=> "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-10">
      <%= f.submit 'Sign Up', :class => "btn btn-success" %>
    </div>
  </div>
</div>
</div>

<% end %>
